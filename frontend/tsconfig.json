{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types"
, "vitest.config.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
